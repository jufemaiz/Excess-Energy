- lga ||= nil
- lga_stats ||= nil
- unless lga.nil? || lga_stats.nil?
	%h2
		%a{:href=>"/lgas/#{lga.lga_code}"}
			= lga.lga
	.mapCanvas
		.map
			Map Holder
	%h3 People
	%dl
		%dt Population
		%dd
			%span.number.important
				= commify lga.population
			= partial(:'partials/percentage', :locals => {:value => lga.population, :max => lga_stats[:total][:population][:max], :min => lga_stats[:total][:population][:min]})
		%dt Customers
		%dd
			%span.number
				= commify lga.total_customers	
			= partial(:'partials/percentage', :locals => {:value => lga.total_customers, :max => lga_stats[:total][:customers][:max], :min => lga_stats[:total][:customers][:min]})

	%h3 Energy
	%dl
		%dt
			Total Energy (
			%abbr{:title=>"kilowatt hours"} kWh
			)
		%dd
			%span.number.important
				= commify lga.total_energy
			= partial(:'partials/percentage', :locals => {:value => lga.total_energy, :max => lga_stats[:total][:energy][:max], :min => lga_stats[:total][:energy][:min], :color => true})
		%dt
			per Customer (
			%abbr{:title=>"kilowatt hours"} kWh
			= "/ customer )"
		%dd
			%span.number
				= commify lga.total_energy / lga.total_customers
			= partial(:'partials/percentage', :locals => {:value => lga.total_energy / lga.total_customers, :max => lga_stats[:total][:per_customer][:max], :min => lga_stats[:total][:per_customer][:min], :color => true})
		%dt
			per Resident (
			%abbr{:title=>"kilowatt hours"} kWh
			= "/ resident )"
		%dd
			%span.number.important
				= commify lga.total_energy / lga.population
			= partial(:'partials/percentage', :locals => {:value => lga.total_energy / lga.population, :max => lga_stats[:total][:per_resident][:max], :min => lga_stats[:total][:per_resident][:min], :color => true})

	%h3 Residential Energy
	%dl
		%dt
			Residential Energy (
			%abbr{:title=>"kilowatt hours"} kWh
			)
		%dd
			%span.number.important
				= commify lga.total_residential_energy
			= partial(:'partials/percentage', :locals => {:value => lga.total_residential_energy, :max => lga_stats[:residential][:total][:energy][:max], :min => lga_stats[:residential][:total][:energy][:min], :color => true})
		%dt
			(
			%abbr{:title=>"kilowatt hours"} kWh
			= "/ customer )"
		%dd
			%span.number
				= commify lga.total_residential_energy / lga.residential_customers
			= partial(:'partials/percentage', :locals => {:value => lga.total_residential_energy / lga.residential_customers, :max => lga_stats[:residential][:total][:per_customer][:max], :min => lga_stats[:residential][:total][:per_customer][:min], :color => true})
		%dt
			per Resident (
			%abbr{:title=>"kilowatt hours"} kWh
			= "/ resident )"
		%dd
			%span.number.important
				= commify lga.total_residential_energy / lga.population
			= partial(:'partials/percentage', :locals => {:value => lga.total_residential_energy / lga.population, :max => lga_stats[:residential][:total][:per_resident][:max], :min => lga_stats[:residential][:total][:per_resident][:min], :color => true})


	%h3 Business Energy
	%dl
		%dt
			Business Energy (
			%abbr{:title=>"kilowatt hours"} kWh
			)
		%dd
			%span.number.important
				= commify lga.total_business_energy
			= partial(:'partials/percentage', :locals => {:value => lga.total_business_energy, :max => lga_stats[:business][:total][:energy][:max], :min => lga_stats[:business][:total][:energy][:min], :color => true})
		%dt
			per Customer (
			%abbr{:title=>"kilowatt hours"} kWh
			= "/ customer )"
		%dd
			%span.number.important
				= commify lga.total_business_energy / lga.total_business_customers
			= partial(:'partials/percentage', :locals => {:value => lga.total_business_energy / lga.total_business_customers, :max => lga_stats[:business][:total][:per_customer][:max], :min => lga_stats[:business][:total][:per_customer][:min], :color => true })
%html(lang="en-GB" dir="ltr")
	%head
		%title
			- unless (@title.nil? || @title == "")
				= "#{@title} &larr;"
			= "Excess Energy"
		
		%meta(http-equiv="content-type" content="html/text; charset=utf-8")
		%meta{:charset => 'utf-8'}
		%meta(name="MSSmartTagsPreventParsing" content="true")
		%meta(name="robots" content="noindex, nofollow")
		%meta(name="description" content="Energy comparisons across LGAs")
		%meta(name="keywords" content="EnergyAustralia, energy, local governments, NSW")
		%meta(name="author" content="Joel Courtney, @jufemaiz")
		
		%link{ :type => 'text/css', :rel => 'stylesheet', :media => 'screen,handheld,projection', :title => 'standard', :href => '/css/blueprint/screen.css' }
		%link{ :type => 'text/css', :rel => 'stylesheet', :media => 'screen,handheld,projection', :title => 'standard', :href => '/css/energy.css' }

		%script{ :type => "text/javascript", :src => "/js/jquery/jquery.min.js" }
		%script{ :type => "text/javascript", :src => "/js/jquery/jquery.json.js" }
		%script{ :type => "text/javascript", :src => "/js/jquery/jquery.cookie.js"}
		%script{ :type => "text/javascript", :src => "/js/jquery/jquery.dl.js" }

		%script{ :type => "text/javascript", :src => "/js/energy.js"}
		/ %script{ :type => "text/javascript", :src => "/js/ion.filters.coffee.js"}
		/ %script{ :type => "text/javascript", :src => "/js/ion.measurement-points.coffee.js"}
		/ %script{ :type => "text/javascript", :src => "/js/ion.map.coffee.js."}
		/ %script{ :type => "text/javascript", :src => "/js/ion.asset-menu.coffee.js."}
		/ %script{ :type => "text/javascript", :src => "/js/ion.chart.coffee.js."}

		%script{ :type => "text/javascript", :src => "http://maps.google.com/maps/api/js?sensor=true"}
		
		:javascript
			// Global map
			var map, marker, bounds;

	%body.home
		<!--[if lte IE 6]><div id="ie6"><![endif]-->
		<!--[if IE 7]><div id="ie7"><![endif]-->
		<!--[if IE 8]><div id="ie8"><![endif]-->
	
		<!-- Header -->
		#header
			#branding
				.container
					#brand.column.span-24.last
						%h1
							%a{ :href => '/', :title => 'Return to Excess Energy Homepage'}
								%span.accessibility Excess Energy
								Excess Energy
			#navigation
				.container
					#globalNav.column.span-24
						%ul.nav-menu
							%li.home
								%a{ :href => '/', :title => 'Return to the home page', :accesskey => 'h' }
									Home
							%li.energy
								%a{ :href => '/energy', :title => 'Browse energy comparisons' }
									Total Energy
							%li.sub-menu
								%a{ :href => '/energy/residential', :title => 'Browse energy comparisons', :accesskey => 'b' }
									Residential Energy
								%ul
									%li.energy
										%a{ :href => '/energy/residential/normal', :title => 'Browse energy comparisons' }
											Normal Residential Energy
									%li.energy
										%a{ :href => '/energy/residential/hot-water', :title => 'Browse energy comparisons' }
											Hot Water Energy
							%li.sub-menu
								%a{ :href => '/energy/business', :title => 'Browse energy comparisons', :accesskey => 'b' }
									Business Energy
								%ul
									%li.energy
										%a{ :href => '/energy/business/small', :title => 'Browse energy comparisons' }
											Small Business
									%li.energy
										%a{ :href => '/energy/business/large', :title => 'Browse energy comparisons' }
											Large Business
							%li.lga
								%a{ :href => '/lgas', :title => 'Browse local government areas', :accesskey => 'l' }
									Local Government Areas
							%li.map
								%a{ :href => '/map', :title => 'View map', :accesskey => 'm' }
									Map

		<!-- Content -->
		#content
			= yield

		<!-- Footer -->
		#footer
			.container
				.column.span-24.last
					An
					%a{:href=>"http://data.nsw.gov.au/"} Apps4NSW
					application
		

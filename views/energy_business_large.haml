.container
  .column.span-24.last
    %h1
      %a{ href: '/energy' } Energy Comparisons
      &rarr;
      %a{ href: '/energy/business' } Business
      &rarr; Large
  .column.span-12
    %h2 Total Energy
    %table
      %thead
        %tr
          %th Local Council
          %th
            Total Energy
            (
            %abbr{ title: 'kilowatt hours' } kWh
            )
      %tbody
        - sort_lgas_by(@lgas, :large_business_energy).each do |lga|
          %tr
            %th
              %a{ href: "/lgas/#{lga.lga_code}" }
                = lga.lga_name
            %td.number
              = commify(lga.large_business_energy)

  .column.span-12.last
    %h2 Total Energy per Customer
    %table
      %thead
        %tr
          %th Local Council
          %th
            Total Energy
            (
            %abbr{ title: 'kilowatt hours' } kWh
            )
            per customer
      %tbody
        - sort_lgas_by(@lgas, :large_business_energy, :residential_customers).each do |lga|
          %tr
            %th
              %a{ href: "/lgas/#{lga.lga_code}" }
                = lga.lga_name
            %td.number
              = commify(lga.large_business_energy / lga.residential_customers)
